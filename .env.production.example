# Production Environment Configuration for AWS EC2 Deployment

# AI Provider API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# GitHub OAuth Configuration (OPTIONAL)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=https://your-domain.com/api/auth/callback/github

# Google OAuth Configuration (OPTIONAL)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=https://your-domain.com/api/auth/callback/google

# Application Configuration (REQUIRED)
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXTAUTH_SECRET=generate-a-secure-random-string-at-least-32-characters-long
NEXTAUTH_URL=https://your-domain.com

# Database Configuration (OPTIONAL - uses in-memory by default)
# For production, consider using PostgreSQL on RDS
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Database Credentials (Required for Docker Compose Production Deployment)
# Use strong passwords - minimum 16 characters with mixed case, numbers, and symbols
POSTGRES_DB=ai_swarm_prod
POSTGRES_USER=swarm_prod
POSTGRES_PASSWORD=generate-strong-password-min-16-chars-Use-pwgen-or-password-manager

# Monitoring Credentials (Required for Docker Compose)
# Change these from defaults for production deployments
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=generate-strong-grafana-password-min-16-chars

# Database Admin Tools (Optional - only for development/staging with --profile admin)
PGADMIN_DEFAULT_EMAIL=admin@your-domain.com
PGADMIN_DEFAULT_PASSWORD=generate-strong-pgadmin-password-min-16-chars
# Docker Compose Security Configuration
POSTGRES_PASSWORD=generate-a-secure-random-password-at-least-16-characters
GRAFANA_ADMIN_PASSWORD=generate-a-secure-random-password-at-least-16-characters
PGADMIN_DEFAULT_PASSWORD=generate-a-secure-random-password-at-least-16-characters
JWT_SECRET=generate-a-secure-random-string-at-least-32-characters-long

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Ollama Configuration (if using local Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Custom API Provider (if using)
CUSTOM_API_KEY=your-custom-api-key
CUSTOM_API_URL=https://your-custom-api-endpoint.com

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Redis Configuration (if using for caching)
REDIS_URL=redis://localhost:6379

# Sentry Error Tracking (OPTIONAL)
SENTRY_DSN=https://your-sentry-dsn-here

# Analytics (OPTIONAL)
ANALYTICS_ID=your-analytics-id
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXXX

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# Security
CORS_ORIGIN=https://your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Performance
NODE_ENV=production
PORT=3000
PM2_INSTANCES=2
