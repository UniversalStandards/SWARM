# AI Provider API Keys
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GOOGLE_AI_API_KEY=your_google_ai_key_here

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/callback/google

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (Optional - for persistent storage)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_swarm

# Database Credentials (REQUIRED for Docker Compose - docker-compose will fail without these)
POSTGRES_DB=ai_swarm
POSTGRES_USER=swarm
POSTGRES_PASSWORD=change_this_secure_password_123

# Monitoring Credentials (REQUIRED for Docker Compose)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_grafana_password

# Database Admin Tools (REQUIRED if using --profile admin)
PGADMIN_DEFAULT_EMAIL=admin@swarm.local
PGADMIN_DEFAULT_PASSWORD=change_this_pgadmin_password

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=true
NEXT_PUBLIC_ENABLE_REALTIME=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Deployment Mode (set to 'static' for GitHub Pages)
EXPORT_MODE=

# Optional: External Services
SENTRY_DSN=
ANALYTICS_ID=
